{% if postListItems.length %}
	<section class="post-list">
		<div class="inner-wrapper">
			<h2 class="post-list__heading">{{ postListHeading }}</h2>
			<ol class="post-list__items" reversed>
				{% for item in postListItems %}
					{% if item.date.getTime() <= global.now %}
						<li class="post-list__item">
							<h3>
								<a href="{{ item.url }}" class="post-list__item-link" rel="bookmark">{{ item.data.title }}</a>
							</h3>
							<p>
								<time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
								<span>- {{ helpers.getReadingTime(item.templateContent) }} minute read</span>
							</p>
						</li>
					{% endif %}
				{% endfor %}
			</ol>
		</div>
	</section>
{% endif %}
