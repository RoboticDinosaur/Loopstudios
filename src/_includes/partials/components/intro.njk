<header class="intro {{ 'intro--with-cover' }}">
	{% if coverImage %}
	<figure class="cover-image">
		<div class="cover-image__frame">
			<img src="{{ coverImage }}" alt="{{ coverCaption }}" class="cover-image__img">
		</div>
		{% if coverCaption %}<figcaption>{{ coverCaption | safe }}</figcaption>{% endif %}
	</figure>
	{% endif %}

	<div class="intro__wrapper inner-wrapper">
		<h1 class="intro__heading {{ 'intro__heading-compact' if page.url === '/' }} {{ '' if not coverImage }}">
			{{ introHeading }}
		</h1>
		{% if introSummary %}
			<div class="intro__summary">
				{{ introSummary | safe }}
			</div>
		{% endif %}
	</div>
</header>
